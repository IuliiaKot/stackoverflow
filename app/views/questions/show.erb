<div class="container">
  <header>
    <h4><%= @question.title%></h4>
  </header>
  <ul>
    <li>
      <form method="post" action='/questions/<%= @question.id %>/upvote' class="inline">
        <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button upvote-button"></button>
      </form>
    </li>
    <li><%= @question.votes.count%></li>
    <li><a href="#">Dw</a></li>
  </ul>
  <section class='single-question'>
    <p><%= @question.body %></p>

    <span class='info'>Asked at <%= @question.created_at%> by <%= @question.user.username%></span>

    <a href="#" class='add-comment'>Add comment</a>
  </section>

  <article class='answers'>
    <%= erb :'answers/_answers', layour: false, locals: {question: @question}%>
  </article>

  <section>
    <%= erb :'answers/_answer_form'%>
  </section>

</div>
