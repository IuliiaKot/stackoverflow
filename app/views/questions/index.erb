<div class="container">
    <article class="">
      <% @questions.each do |question| %>
      <ul>
        <li>
          <form method="post" action='/questions/<%= question.id %>/upvote' class="inline">
            <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button upvote-button"></button>
          </form>
        </li>
        <li><%= question.votes.count%></li>
        <li><form method="post" action='/questions/<%= question.id %>/upvote' class="inline">
            <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-asc vote-button downvote-button"></button>
            </form>
          </li>
      </ul>
      <section class='answer'>
        <a href="/questions/<%= question.id%>"><%= question.title%></a>
        <p class='question-body'><%= question.body[0..224]%>...</p>
      </section>
      <% end %>
    </article>

    <a href="/questions/new">Create a new question</a>
</div>
